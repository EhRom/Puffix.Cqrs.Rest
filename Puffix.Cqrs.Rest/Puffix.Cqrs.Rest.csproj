<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Puffix.io - Romain Ehret</Authors>
    <Company>Puffix.io - Romain Ehret</Company>
    <Description>REST extension for CQRS framework implementation, to facilitate REST calls.</Description>
    <Copyright>Copyright 2023 (c) Puffix / Romain Ehret. All rights reserved.</Copyright>
    <PackageLicenseFile>Licence.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/EhRom/Puffix.Cqrs.Rest</PackageProjectUrl>
    <RepositoryUrl>https://github.com/EhRom/Puffix.Cqrs.Rest</RepositoryUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>REST Extension CQRS Puffix Framework</PackageTags>
    <PackageReleaseNotes>REST for Puffix CQRS framework implementation.</PackageReleaseNotes>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Key.snk</AssemblyOriginatorKeyFile>
    <Version>3.2.0</Version>
	  <AssemblyVersion>3.2.0.0</AssemblyVersion>
	  <AssemblyFileVersion>3.2.0.0</AssemblyFileVersion>
    <Nullable>warnings</Nullable>
    <DelaySign>False</DelaySign>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
    <PackageReference Include="Puffix.Cqrs" Version="3.2.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\Resources\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="Licence.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>
